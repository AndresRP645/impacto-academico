<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                <h3>Ingresar</h3>
            </div>
            <div class="card-body">
                <form action="/login" method="POST" netlify>
                    <div class="form-group">
                        <input type="text" name="Cuenta" placeholder="Numero de cuenta" class="form-control" autofocus>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="Nombre" placeholder="Nombre Completo" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <select class="form-control" name="id_Carrera">
                            <option selected>Selecciona tu carrera</option>
                            {{#each Carrera}}
                                <option value="{{@key}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <br>
                    <div class="form-group">
                        <button class="btn btn-outline-success btn-block">
                            Ingresar
                        </button>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
